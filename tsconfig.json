{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es5",
    "module": "es2015",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@ka/apm/node-sensor": ["libs/apm/node-sensor/src/index.ts"],
      "@ka/log": ["libs/log/src/index.ts"],
      "@ka/apm": ["libs/apm/src/index.ts"],
      "@ka/change-detector/shell": ["libs/change-detector/shell/src/index.ts"],
      "@ka/common/ui": ["libs/common/ui/src/index.ts"],
      "@ka/shared": ["libs/shared/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
